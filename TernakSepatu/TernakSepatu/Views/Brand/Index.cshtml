@model List<TernakSepatu.Models.Brand>

@{
    ViewData["Title"] = "Daftar Brand";
}

@{
    Layout = "~/Views/Shared/Admin/_Layout.cshtml";
    int index = 1;
}

<div class="row">
    <div class="col-lg-12 mb-4">
        <!-- Tabel Sederhana -->
        <div class="card">
            <div class="card-header py-3 d-flex flex-row align-items-center justify-content-between">
                <h6 class="m-0 font-weight-bold text-primary">Daftar Landing Page</h6>
                <a asp-controller="Brand" asp-action="Create">Buat</a>
            </div>
            <div class="table-responsive">
                <table class="table align-items-center table-flush">
                    <thead class="thead-light">
                        <tr>
                            <th>No</th>
                            <th>Gambar</th>
                            <th>Nama Brand</th>
                            <th>Aksi</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var brand in Model)
                        {
                            <tr>
                                <td>@index</td>
                                <td><img src="/Images/Brand/@brand.ImageURL" width="100" /></td>
                                <td>@brand.BrandName</td>
                                <td style="white-space:nowrap">
                                    <a class="btn btn-primary btn-sm" asp-controller="Brand" asp-action="Edit" asp-route-id="@brand.Id">Edit</a>
                                    <a class="btn btn-primary btn-sm" asp-controller="Brand" asp-action="Delete" asp-route-id="@brand.Id">Hapus</a>
                                </td>
                            </tr>
                            index++; // Menambah index di dalam loop

                        }
                    </tbody>
                </table>
            </div>
            <div class="card-footer"></div>
        </div>
    </div>
</div>
