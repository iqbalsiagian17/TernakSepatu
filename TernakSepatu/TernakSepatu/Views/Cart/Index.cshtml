@model List<TernakSepatu.Models.Cart>

@{
    Layout = "~/Views/Shared/Costumer/_Layout.cshtml";
}


<div class="container-fluid pt-5">
    <div class="row px-xl-5">
        <div class="col-lg-12 table-responsive mb-5">
            @if (Model != null && Model.Count > 0)
            {
                <table class="table table-bordered text-center mb-0">
    <thead class="bg-secondary text-dark">
        <tr>
            <th>Gambar</th>
            <th>Produk</th>
            <th>Harga</th>
            <th>Jumlah</th>
            <th>Kondisi</th>
            <th>Aksi</th>
        </tr>
    </thead>
    <tbody class="align-middle">
        @foreach (var item in Model)
        {
            <tr>
                <td class="align-middle">
                    @if (item.Product != null)
                    {
                        <img src="~/Images/Product/@item.Product.ImageURL.Split(',')[0]" alt="@item.Product.ProductName" style="width: 50px;">
                    }
                </td>
                <td class="align-middle">
                    @item.Product.ProductName
                </td>
                <td class="align-middle price">@string.Format("{0:C}", item.Price)</td>
                <td class="align-middle">@item.Quantity</td>
                <td class="align-middle">@item.Product.Condition</td>
                <td class="align-middle">
                    <form asp-controller="Cart" asp-action="RemoveFromCart" method="post">
                        <input type="hidden" name="cartId" value="@item.Id" />
                        <button type="submit" class="btn btn-danger">
                            <i class="fa fa-times"></i> Hapus
                        </button>
                    </form>
                </td>
            </tr>
        }
    </tbody>
</table>

@if (Model == null || Model.Count == 0)
{
    <div class="alert alert-info" role="alert">
        Your cart is empty. <a href="@Url.Action("Index", "Home")">Continue shopping</a>.
    </div>
}
else
{
    <div class="text-end mt-3">
        <a href="@Url.Action("Index", "Checkout")" class="btn btn-primary">Checkout</a>
    </div>
}



            }
            else
            {
                <p>Your cart is empty.</p>
            }
        </div>

    </div>
</div>





