@model TernakSepatu.Dtos.CategoryDto

@{
    Layout = "~/Views/Shared/Admin/_Layout.cshtml";
}

<div class="row">
    <div class="col-lg-6">
        <!-- Form Basic -->
        <div class="card mb-4">
            <div class="card-header py-3 d-flex flex-row align-items-center justify-content-between">
                <h6 class="m-0 font-weight-bold text-primary">Edit Category</h6>
            </div>
            <div class="card-body">
                <form method="post">
                    <div class="form-group">
                        <label for="categoryName">Category Name</label>
                        <input asp-for="CategoryName" class="form-control" id="categoryName" placeholder="Enter category name">
                        <span asp-validation-for="CategoryName" class="text-danger"></span>
                    </div>
                    <button type="submit" class="btn btn-primary">Save</button>
                    <a class="btn btn-outline-primary" asp-controller="Category" asp-action="Index" role="button">Cancel</a>
                </form>
            </div>
        </div>
    </div>
</div>
