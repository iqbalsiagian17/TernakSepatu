@model List<TernakSepatu.Models.Category>

@{
    ViewData["Title"] = "Daftar Kategori";
    Layout = "~/Views/Shared/Admin/_Layout.cshtml";
    int index = 1;
}

<div class="row">
    <div class="col-lg-12 mb-4">
        <!-- Tabel Sederhana -->
        <div class="card">
            <div class="card-header py-3 d-flex flex-row align-items-center justify-content-between">
                <h6 class="m-0 font-weight-bold text-primary">Daftar Kategori</h6>
                <a asp-controller="Category" asp-action="Create" class="btn btn-primary">Buat Kategori</a>
            </div>
            <div class="table-responsive">
                <table class="table align-items-center table-flush">
                    <thead class="thead-light">
                        <tr>
                            <th>No</th>
                            <th>Nama Kategori</th>
                            <th>Aksi</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var category in Model)
                        {
                            <tr>
                                <td>@index</td>
                                <td>@category.CategoryName</td>
                                <td style="white-space:nowrap">
                                    <a class="btn btn-primary btn-sm" asp-controller="Category" asp-action="Edit" asp-route-id="@category.Id">Edit</a>
                                    <a class="btn btn-primary btn-sm" asp-controller="Category" asp-action="Delete" asp-route-id="@category.Id">Hapus</a>
                                </td>
                            </tr>
                            index++;
                        }
                    </tbody>
                </table>
            </div>
            <div class="card-footer"></div>
        </div>
    </div>
</div>
