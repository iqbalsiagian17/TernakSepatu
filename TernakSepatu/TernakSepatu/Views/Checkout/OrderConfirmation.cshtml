@model TernakSepatu.Models.Order

@{
    ViewData["Title"] = "Order Confirmation";
    string orderMessage = TempData["OrderMessage"]?.ToString();
}

@{
    Layout = "~/Views/Shared/Costumer/_Layout.cshtml";
}

<div class="container">
    <div class="row justify-content-center">
        <div class="col-md-10">
            @if (!string.IsNullOrEmpty(orderMessage))
            {
                <div class="alert alert-success" role="alert">
                    @orderMessage
                </div>
            }

            <h1 class="text-center">Order Bill</h1>

            <div class="table-responsive">
                <table class="table">
                    <tbody>
                        <tr>
                            <th>Order ID</th>
                            <td>@Model.OrderId</td>
                        </tr>
                        <tr>
                            <th>Waktu</th>
                            <td>@Model.OrderDate.ToString("dd/MM/yyyy HH:mm:ss")</td>
                        </tr>
                        <tr>
                            <th>Total</th>
                            <td>Rp @Model.TotalAmount.ToString("N0")</td>
                        </tr>
                        <tr>
                            <th>Pembayaran Melalui ID</th>
                            <td>@Model.PaymentMethod</td>
                        </tr>
                        <tr>
                            <th>Dikirim Melalui</th>
                            <td>@Model.ShippingMethod</td>
                        </tr>
                        <tr>
                            <th>Tujuan</th>
                            <td>@Model.ShippingAddress</td>
                        </tr>
                        <tr>
                            <th>Status</th>
                            <td>@Model.Status</td>
                        </tr>
                    </tbody>
                </table>
            </div>

            <div class="text-center">
                <a href="@Url.Action("Index", "Order")" class="btn btn-primary">Lihat Orders Kamu</a>
            </div>
        </div>
    </div>
</div>
