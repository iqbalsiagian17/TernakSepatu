@model List<Order>
@using Microsoft.AspNetCore.Identity
@using TernakSepatu.Areas.Identity.Data
@inject UserManager<ApplicationUser> UserManager

@{
    Layout = "~/Views/Shared/Admin/_Layout.cshtml";
}

<div class="row">
    <div class="col-lg-12">
        <div class="card mb-4">
            <div class="card-header py-3 d-flex flex-row align-items-center justify-content-between">
                <h6 class="m-0 font-weight-bold text-primary">Daftar Pesanan</h6>
            </div>
            <div class="table-responsive">
                <table class="table">
                    <thead>
                        <tr>
                            <th>ID Orderan</th>
                            <th>Nama Pemesan</th>
                            <th>Total</th>
                            <th>Status</th>
                            <th>Tindakan</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var order in Model.OrderByDescending(o => o.OrderId))
                        {
                            <tr>
                                <td>@order.OrderId</td>
                                <td>
                                    @if (!string.IsNullOrEmpty(order.UserId))
                                    {
                                        var user = await UserManager.FindByIdAsync(order.UserId);
                                        if (user != null)
                                        {
                                            <text>@user.FirstName @user.LastName</text>
                                        }
                                        else
                                        {
                                            <text>User Not Found</text>
                                        }
                                    }
                                    else
                                    {
                                        <text>User Not Found</text>
                                    }
                                </td>
                                <td>@order.TotalAmount.ToString("C")</td>
                                <td>@order.Status</td>
                                <td>
                                    @if (order.Status == "Menunggu Konfirmasi Admin")
                                    {
                                        <a href="@Url.Action("ProcessOrder", "ConfirmationAdmin", new { orderId = order.OrderId })" class="btn btn-primary">Proses Pesanan</a>
                                    }
                                    else if (order.Status == "Pesanan Anda sedang diproses")
                                    {
                                        <a href="@Url.Action("ShipOrder", "ConfirmationAdmin", new { orderId = order.OrderId })" class="btn btn-success">Kirim Pesanan</a>
                                    }
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>
