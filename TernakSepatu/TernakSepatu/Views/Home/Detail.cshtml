@using Microsoft.AspNetCore.Identity
@using TernakSepatu.Areas.Identity.Data


@inject SignInManager<ApplicationUser> SignInManager
@inject UserManager<ApplicationUser> UserManager


@{
    ViewData["Title"] = "Home Page";
    Layout = "~/Views/Shared/Costumer/_Layout.cshtml";
    var context = ViewData.Model as TernakSepatu.Data.TernakSepatuDBContext;

    var formattedPrice = string.Format("{0:#,##0}", Model.Price);
    // or: var formattedPrice = Model.Price.ToString("#,##0");

}



@section Navbar {
    @Html.Partial("~/Views/Shared/Costumer/Partial/_Navbar2.cshtml")
}






<!-- Shop Detail Start -->
<div class="container-fluid py-5">
    <div class="row px-xl-5">
        <div class="col-lg-5 pb-5">
            <div id="product-carousel" class="carousel slide" data-ride="carousel">
                <div class="carousel-inner border">
                    @foreach (var imageUrl in Model.ImageURL.Split(','))
                    {
                        <div class="carousel-item @(imageUrl == Model.ImageURL.Split(',')[0] ? "active" : "")">
                            <img class="w-100 h-100" src="~/Images/Product/@imageUrl" alt="@Model.ProductName">
                        </div>
                    }
                </div>
                <a class="carousel-control-prev" href="#product-carousel" data-slide="prev">
                    <i class="fa fa-2x fa-angle-left text-dark"></i>
                </a>
                <a class="carousel-control-next" href="#product-carousel" data-slide="next">
                    <i class="fa fa-2x fa-angle-right text-dark"></i>
                </a>
            </div>
        </div>


        <div class="col-lg-7 pb-5">
            <h3 class="font-weight-semi-bold">@Model.ProductName <span class="text-white bg-dark">@Model.Condition</span></h3>

            <h3 class="font-weight-semi-bold mb-4">Rp @formattedPrice</h3>
            <p class="mb-4"><p>@Model.Details</p>
            <div class="d-flex mb-3">
                <p class="text-dark font-weight-medium mb-0 mr-3">Sizes:</p>
                <form>
                    <div class="custom-control custom-radio custom-control-inline">
                        <input type="radio" class="custom-control-input" id="size-1" name="size" checked>
                        <label class="custom-control-label" for="size-1">@Model.Size</label>
                    </div>

                </form>
            </div>

            <div class="d-flex align-items-center mb-4 pt-2" data-product-id="@Model.Id">
                    @if (Model.Stock == "Habis")
                    {
                    <p class="text-muted mb-0 bg-danger">Sold Out Kilat!</p>
                    }
                    else
                    {
                    <a href="#" class="btn btn-dark px-3 btn-add-to-cart" data-product-id="@Model.Id">
                        <i class="fa fa-shopping-cart mr-1"></i> Add To Cart
                    </a>
                    }
            </div>


            <div class="d-flex pt-2">
                <p class="text-dark font-weight-medium mb-0 mr-2">Bagiakan ;</p>
                <div class="d-inline-flex">
                    <a class="text-dark px-2" href="">
                        <i class="fab fa-facebook-f"></i>
                    </a>
                    <a class="text-dark px-2" href="">
                        <i class="fab fa-twitter"></i>
                    </a>
                    <a class="text-dark px-2" href="">
                        <i class="fab fa-linkedin-in"></i>
                    </a>
                    <a class="text-dark px-2" href="">
                        <i class="fab fa-pinterest"></i>
                    </a>
                </div>
            </div>
        </div>
    </div>
    <div class="row px-xl-5">
        <div class="col">
            <div class="nav nav-tabs justify-content-center border-secondary mb-4">
                <a class="nav-item nav-link active" data-toggle="tab" href="#tab-pane-1">Detail Ukuran</a>
            </div>
            <div class="tab-content">
                <div class="tab-pane fade show active text-center" id="tab-pane-1">
                    <style>
                        .zoom-effect {
                            transition: transform 0.3s ease; /* Animasi perbesaran */
                        }

                            .zoom-effect:hover {
                                transform: scale(1.5); /* Perbesar gambar saat kursor diarahkan ke atas */
                                z-index: 999; /* Pastikan gambar mendapat lapisan teratas */
                            }
                    </style>

                    @if (ViewData["Brand"] != null)
                    {
                        var brand = ViewData["Brand"] as Brand; // Ganti YourBrandModel dengan model merek Anda

                        string brandImageUrl = string.Empty;
                        switch (brand.BrandName.ToLower())
                        {
                            case "nike":
                                brandImageUrl = "~/images/Chart/nike.jpg";
                                break;
                            case "adidas":
                                brandImageUrl = "~/images/Chart/adidas.jpeg";
                                break;
                            case "puma":
                                brandImageUrl = "~/images/Chart/puma.png";
                                break;
                            case "new balance": // Perhatikan penggunaan spasi dalam "new balance"
                                brandImageUrl = "~/images/Chart/newbalance.jpeg";
                                break;
                            case "asics": // Perhatikan penggunaan spasi dalam "new balance"
                                brandImageUrl = "~/images/Chart/asics.png";
                                break;
                            case "onitsuka": // Perhatikan penggunaan spasi dalam "new balance"
                                brandImageUrl = "~/images/Chart/onitsuka.jpg";
                                break;
                            default:
                                // Jika merek tidak dikenali, tampilkan gambar default
                                brandImageUrl = "~/images/Chart/nike.jpg";
                                break;
                        }


                        <img src="@Url.Content(brandImageUrl)" class="img-fluid w-25 zoom-effect" alt="Brand Image">
                    }
                    else
                    {
                        <p>Brand information not available.</p>
                    }
                </div>

                
            </div>
        </div>
    </div>



    <style>
        .cat-item {
            width: 400px; /* Tentukan lebar tetap untuk setiap card */
            height: 400px; /* Tentukan tinggi tetap untuk setiap card */
        }

        .cat-img {
            width: 100%;
            height: 100%;
            overflow: hidden;
        }

            .cat-img img {
                width: 100%;
                height: 100%;
                object-fit: contain;
            }

        .img-height {
            height: 400px; /* Atur tinggi tetap untuk semua gambar */
            object-fit: cover; /* Pastikan gambar memenuhi seluruh area gambar dengan mempertahankan aspek rasio */
        }

    </style>


    <!-- Products Start -->
    <div class="container-fluid pt-5">
        <div class="text-center mb-4">
            <h2 class="section-title px-5"><span class="px-2">Produk Lain Yang Serupa</span></h2>
        </div>
        <div class="row px-xl-5 pb-3">
            @foreach (var product in (List<Product>)ViewData["Products"])
            {
                @if (product.Stock != "Habis")
                {
                    <div class="col-lg-3 col-md-6 col-sm-12 pb-1">
                        <div class="card product-item border-0 mb-4">
                            <div class="card-header product-img position-relative overflow-hidden bg-transparent border p-0 ">
                                <img class="img-fluid w-100 img-height" src="~/Images/Product/@(product.ImageURL.Split(',')[0])" alt="@product.ProductName">
                            </div>
                            <div class="card-body border-left border-right text-center p-0 pt-4 pb-3">
                                <h6 class="text-truncate mb-3">
                                    <span title="@product.ProductName">@product.ProductName</span>
                                    <span class="text-white bg-dark">@product.Condition</span>
                                </h6>
                                <div class="d-flex justify-content-center">
                                    <h6>$@product.Price</h6><h6 class="text-muted ml-2"><del>$@product.Discount</del></h6>
                                </div>
                            </div>
                            <div class="card-footer d-flex justify-content-between bg-light border">
                                <a href="@Url.Action("Detail", "Home", new { id = product.Id })" class="btn btn-sm text-dark p-0">
                                    <i class="fas fa-eye text-dark mr-1"></i>Lihat Detail
                                </a>
                                <a href="#" class="btn btn-sm text-dark p-0 btn-add-to-cart" data-product-id="@product.Id" style="text-decoration: none;">
                                    <i class="fas fa-shopping-cart text-dark mr-1"></i> + Keranjang
                                </a>
                            </div>
                        </div>
                    </div>
                }
            }

        </div>
    </div>
    <!-- Products End -->






</div>


<!-- Shop Detail End -->



