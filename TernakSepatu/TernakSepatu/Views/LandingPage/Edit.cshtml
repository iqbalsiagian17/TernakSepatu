@model LandingPageDto


@{
    Layout = "~/Views/Shared/Admin/_Layout.cshtml";
}

<div class="row">
    <div class="col-lg-6">
        <!-- Form Basic -->
        <div class="card mb-4">
            <div class="card-header py-3 d-flex flex-row align-items-center justify-content-between">
                <h6 class="m-0 font-weight-bold text-primary">Edit Landing Page</h6>
            </div>
            <div class="card-body">
                <form method="post" enctype="multipart/form-data">
                    <div class="form-group">
                        <label for="exampleInputEmail1">Judul</label>
                        <input asp-for="Text" class="form-control" id="exampleInputEmail1" aria-describedby="emailHelp"
                               placeholder="Judul Promosinya">
                    </div>
                    <div class="form-group">
                        <label for="statusSelect">Status</label>
                        <select asp-for="Status" class="form-control" id="statusSelect">
                            <option value="aktif">Aktif</option>
                            <option value="nonaktif">Tidak Aktif</option>
                        </select>
                    </div>
                    <div class="form-group">
                        <label for="createdAt">Created At</label>
                        <input class="form-control" id="createdAt" readonly value="@ViewData["CreatedAt"]">
                    </div>
                    <div class="form-group">
                    <div class="custom-file">
                        <input type="file" class="custom-file-input" id="customFile" name="ImageURL">
                        <label class="custom-file-label" for="customFile">Choose Images</label>
                    </div>
                </div>
                    <div class="row">
                        <div class="col">
                            <button type="submit" class="btn btn-primary">Submit</button>
                            <a class="btn btn-outline-primary" asp-controller="LandingPage" asp-action="Index" role="button">Cancel</a>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>

    <div class="col-lg-6">
        <!-- Form Basic -->
        <div class="card mb-4">
            <div class="card-header py-3 d-flex flex-row align-items-center justify-content-between">
                <h6 class="m-0 font-weight-bold text-primary">Choose Image</h6>
                <small id="emailHelp" class="form-text text-muted">
                    Usahakan Ukuran 1060 x 180
                </small>
            </div>
            <div class="card-body text-center">
                <div class="form-group">
                    <img src="/Images/LandingPage/@ViewData["ImageURL"]" class="mx-auto" width="500" /> <!-- Tambahkan kelas 'mx-auto' di sini -->
                </div>

                
            </div>

        </div>
    </div>
</div>


