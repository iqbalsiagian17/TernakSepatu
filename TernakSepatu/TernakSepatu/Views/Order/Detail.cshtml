@model TernakSepatu.Models.Order

<h1>Order Details</h1>

<div>
    <p><strong>Order ID:</strong> @Model.OrderId</p>
    <p><strong>Order Date:</strong> @Model.OrderDate.ToString("dd/MM/yyyy HH:mm:ss")</p>
    <p><strong>Total Amount:</strong> @Model.TotalAmount.ToString("C")</p>
    <p><strong>Payment Method:</strong> @Model.PaymentMethod</p>
    <p><strong>Shipping Method:</strong> @Model.ShippingMethod</p>
    <p><strong>Status:</strong> @Model.Status</p>
    <p><strong>Tujuan:</strong> @Model.ShippingAddress</p>

</div>

<hr />

<h2>Order Items</h2>

<table class="table">
    <thead>
        <tr>
            <th>Product</th>
            <th>Quantity</th>
            <th>Price Per Unit</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.OrderDetails)
        {
            <tr>
                <td>@item.Product.ProductName</td>
                <td>@item.Quantity</td>
                <td>@item.PricePerUnit.ToString("C")</td>
            </tr>
        }


        <!-- Additional logic for multiple products -->
        @if (Model.OrderDetails.Count > 1)
        {
            <tr>
                <td colspan="3"><strong>Total Order Amount:</strong></td>
                <td>@Model.TotalAmount.ToString("C")</td>
            </tr>
        }
    </tbody>
</table>

<a asp-action="Index" class="btn btn-primary">Back to Orders</a>
