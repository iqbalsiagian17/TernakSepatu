@model List<PaymentQrProof>

@{
    Layout = "~/Views/Shared/Admin/_Layout.cshtml";
}


<div class="row">
    <div class="col-lg-12 mb-4">
        <div class="card">
            <div class="card-header py-3 d-flex flex-row align-items-center justify-content-between">
                <h6 class="m-0 font-weight-bold text-primary">Daftar Bukti Pembayaran yang Harus Disetujui</h6>
            </div>
            <div class="table-responsive">
                <table class="table table-bordered table-striped">
                    <thead class="thead-light">
                        <tr>
                            <th>ID Pesanan</th>
                            <th>Gambar Bukti</th>
                            <th>Status</th>
                            <th>Nama Pelanggan</th>
                            <th>Tindakan</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var proof in Model.OrderByDescending(p => p.Id))
                        {
                            <tr>
                                <td>@proof.OrderId</td>
                                <td><img src="~/Proofs/@proof.ProofImage" alt="Gambar Bukti" style="max-width: 200px; max-height: 200px;" /></td>
                                <td>@proof.Status</td>
                                <td>@proof.Order.UserId</td>

                                <td>
                                    @if (proof.Status == "Pending")
                                    {
                                        <form asp-controller="QrPaymentAdmin" asp-action="ApproveProof" method="post">
                                            <input type="hidden" name="proofId" value="@proof.Id" />
                                            <button type="submit" class="btn btn-success">Setujui</button>
                                        </form>

                                        <form method="post" action="@Url.Action("RejectProof", "QrPaymentAdmin")">
                                            <input type="hidden" name="proofId" value="@proof.Id" />
                                            <div class="form-group">
                                                <label for="rejectionReason">Alasan Penolakan:</label>
                                                <input type="text" class="form-control" id="rejectionReason" name="rejectionReason" />
                                            </div>
                                            <button type="submit" class="btn btn-danger">Tolak Bukti Pembayaran</button>
                                        </form>
                                    }
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
            <div class="card-footer"></div>
        </div>
    </div>
</div>
