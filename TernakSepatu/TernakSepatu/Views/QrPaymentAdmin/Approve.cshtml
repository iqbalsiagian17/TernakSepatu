@model List<PaymentQrProof>

@{
    Layout = "~/Views/Shared/Admin/_Layout.cshtml";
}

<h1>Acc Bukti Pembayaran</h1>

<div class="table-responsive">
    <table class="table table-bordered table-striped">
        <thead class="thead-dark">
            <tr>
                <th>Order ID</th>
                <th>Proof Image</th>
                <th>Status</th>
                <th>Customer Name</th>
                <th>Action</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var proof in Model.OrderByDescending(p => p.Id))
            {
                <tr>
                    <td>@proof.OrderId</td>
                    <td><img src="~/Proofs/@proof.ProofImage" alt="Proof Image" style="max-width: 200px; max-height: 200px;" /></td>
                    <td>@proof.Status</td>
                    <td>@proof.Order.UserId</td>

                    <td>
                        @if (proof.Status == "Pending")
                        {
                            <form asp-controller="QrPaymentAdmin" asp-action="ApproveProof" method="post">
                                <input type="hidden" name="proofId" value="@proof.Id" />
                                <button type="submit" class="btn btn-success">Approve</button>
                            </form>

                            <form method="post" action="@Url.Action("RejectProof", "QrPaymentAdmin")">
                                <input type="hidden" name="proofId" value="@proof.Id" />
                                <div class="form-group">
                                    <label for="rejectionReason">Alasan Penolakan:</label>
                                    <input type="text" class="form-control" id="rejectionReason" name="rejectionReason" />
                                </div>
                                <button type="submit" class="btn btn-danger">Tolak Bukti Pembayaran</button>
                            </form>
                        }
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
