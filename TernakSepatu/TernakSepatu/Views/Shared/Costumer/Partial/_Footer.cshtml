                <img class="img-fluid payment-icon" src="~/Images/Payment/gopay.png" alt="PayPal">
                <img class="img-fluid payment-icon" src="~/Images/Payment/bni.png" alt="PayPal">
                <img class="img-fluid payment-icon" src="~/Images/Payment/bri.png" alt="PayPal">
